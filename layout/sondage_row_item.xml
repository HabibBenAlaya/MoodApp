<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sopra_red"
    android:descendantFocusability="afterDescendants"
    android:weightSum="6" >

    <ImageView
        android:id="@+id/img_sondage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_margin="8dp"
        android:gravity="center"
        android:src="@drawable/ic_survey_black" >
    </ImageView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="6"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginLeft="1dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_titre_sondage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Organisation et cadre de travail."
                android:textColor="@color/white"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_categorie_sondage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Espace de travail"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_dates_sondage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Du 24/05/2018 au 31/05/2018"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/nbr_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_gravity="end|center_vertical"
        android:layout_alignParentRight="true"
        android:text="5Q"
        android:textColor="@color/white"
        android:textSize="12sp" />

</LinearLayout>